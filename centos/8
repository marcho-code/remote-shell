[baseos-host]
name=CentOS Stream $releasever - BaseOS
baseurl=http://host/$contentdir/$stream/BaseOS/$basearch/os/
gpgcheck=1
enabled=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-centosofficial

[appstream-host]
name=CentOS Stream $releasever - AppStream
baseurl=http://host/$contentdir/$stream/AppStream/$basearch/os/
gpgcheck=1
enabled=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-centosofficial

[appstream-source-host]
name=CentOS Stream $releasever - AppStream - Source
baseurl=http://host/$contentdir/$stream/AppStream/source/tree/
gpgcheck=1
enabled=0
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-centosofficial

